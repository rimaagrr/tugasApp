<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="6dp">

    <LinearLayout
        android:elevation="4dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:padding="0dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_horizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:forceDarkAllowed="false"
                android:longClickable="false"
                android:src="@drawable/g6"/>

            <TextView
                android:id="@+id/disc_horizontal"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:text="0%"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="-145dp"
                android:gravity="center"
                android:background="@drawable/ic_disc2"
                android:backgroundTint="@color/hitam"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:textSize="14dp"
                android:textColor="#000000"
                android:text="Jilbab Teh Gelasaaaaa"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/silver"
                    android:text="Rp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/price_horizontal"
                    android:textColor="@color/silver"
                    android:text="150,000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Rp"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/price2_horizontal"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="150,000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/disc_horizontal"-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="#FF0000"-->
<!--                android:text="0%"-->
<!--                android:layout_marginLeft="3dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"/>-->

            <LinearLayout
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_addToFavoriteHorizontal"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/ic_favorit_hitam"
                    android:layout_gravity="end"
                    android:clickable="true" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_addToCartGridFav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/submit_button"
                android:backgroundTint="@color/hitam"
                android:text="Add to cart"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
